<div class="container px-5 px-sm -0">
  <div class="row">
    <div class="col-md-3">
      <% if @book.errors.any? %>
        <p><%= @book.errors.count %>errors prohibited this book from being saved:</p>
        <% @book.errors.full_messages.each do |book| %>
          <p><%= book %> can't be blank.</p>
        <% end %>
      <% end %>
    <%= render 'users/side', user: current_user %>
    <%= render 'books/side', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <% @books.each do |book| %>
        <table>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Option</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <%= link_to user_path(book.user) do %>
                <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no-image.jpg" %></td>
              <% end %>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
