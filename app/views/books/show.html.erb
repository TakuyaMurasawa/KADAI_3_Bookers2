<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<div class="container">
    <div class="row">
        <div class="col-md-3">

          <%= render 'users/side', user: @book.user %>
          <%= render 'books/side', book: @new_book %>
        </div>

        <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
          <table>
            <tbody>
              <tr>
                <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no-image.jpg" %><br>
                <%= link_to @book.user.name, user_path(@book.user.id) %></td>
                        <!--@user.name-->
                <td><%= @book.title %></td>
                <td><%= @book.body %></td>

          <!--下記変更部分-->
              <% if @book.user.id == current_user.id %>

              <td><%=link_to "edit", edit_book_path(@book.id) %></td>
              <td><%=link_to "destroy", book_path(@book.id),method: :delete, "data-confirm" => "本当に消しますか？" %></td>
              <% end %>

              </tr>
            </tbody>
          </table>
        </div>
    </div>
</div>