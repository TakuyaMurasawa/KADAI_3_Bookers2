<h2>New book</h2>
<%= form_with model:book, local:true do |f| %>
<div class="field">
  <lavel class="book-title">Title</lavel>
  <%= f.text_field :title, class: "book-form" %>
</div>

<div class="field">
  <lavel class="book-body">Opinion</lavel>
  <%= f.text_area :body, class: "book-form" %>
</div>

<div class="field">
<%= f.submit "Create Book", class: "action" %>
</div>
<% end %>
