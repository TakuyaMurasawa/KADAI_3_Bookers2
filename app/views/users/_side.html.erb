



<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no-image.jpg" %>
<table class="table">
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
</table>
<!--復習部分-->
<%= link_to  edit_user_path(user), class: 'btn btn-outline-secondary btn-block' do %>
  <i class="fas fa-user-cog"></i>
<% end %>
