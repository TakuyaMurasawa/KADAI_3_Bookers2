<div class="container">
     <div class="row">
          <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<%= form_with model:@user, local:true do |f| %>
<h2>User info</h2>
<% if @user.errors.any? %>
     <p><%= @user.errors.count %>errors prohibited this book from being saved:</p>
     <% @user.errors.full_messages.each do |user| %>
          <p><%= user %> can't be blank.</p>
    <% end %>
 <% end %>
<div class="field">
<label>Name</label>
<%= f.text_field :name, class: "user-form", autofocus: true, id:"inputname", placeholder:"名前" %>
</div>
<div class="field">
<label>Image</label>
<%= f.attachment_field :profile_image, class: "user-image-form", placeholder: "プロフィール画像" %>
</div>
<div class="field">
<label>Introduction</label>
<%= f.text_area :introduction, class: "user-form" %>
</div>
<%= f.submit "Update User", class: "action" %>
<% end %>
</div>
</div>
</div>

